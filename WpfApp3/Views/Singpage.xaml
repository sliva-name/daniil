<Page x:Class="WpfApp3.Views.Singpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Singpage"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Margin="0 0 0 10" CornerRadius="20"  Background="#5518d7" Padding="10">
                <Button Background="#5518d7"
                    Height="40"
                    BorderBrush="#5518d7"
                    Content="Для пользователя"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" Click="Button_Click"
                    />
            </Border>
            <Border  CornerRadius="20"  Background="#5518d7" Padding="10">
                <Button
                    Background="#5518d7"
                    BorderBrush="#5518d7"
                    Height="40"
                    FontWeight="Bold"
                    Foreground="White"
                    FontSize="14"
                    Content="Для специалиста" Click="Button_Click_1"/>
            </Border>
        </StackPanel>

    </Grid>
</Page>
