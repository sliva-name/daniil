<Page x:Class="WpfApp3.Views.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User"
      Background="White">

    <Grid>
        <Button Width="20" Content="⬅" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_1" Background="White" BorderBrush="White"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label>Введите имя</Label>
            <TextBox Name="name" Margin="0 5 0 0"/>
            <Label>Введите фамилию</Label>
            <TextBox Name="surname" Margin="0 5 0 10"/>
            <DatePicker Margin="0 5 0 10" Name="datetime" Grid.ColumnSpan="2"/>
            <Button Background="#5518d7"
                    Height="40"
                    BorderBrush="#5518d7"
                    Content="Записаться"
                    FontSize="14"
                    FontWeight="Bold"
                    Padding="10"
                    Foreground="White" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
